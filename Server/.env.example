# Backend Environment Variables
MONGODB_URI=mongodb://localhost:27017/property-dekho
PORT=5000
JWT_SECRET=generate-a-cryptographically-secure-random-string-at-least-32-chars
JWT_EXPIRES_IN=7d
JWT_RESET_EXPIRES=1h

# Cloudinary Configuration (optional - will use placeholder images if not provided)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS and redirects)
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Cookie Session Key
COOKIE_KEY=generate-a-secure-random-cookie-key-for-sessions